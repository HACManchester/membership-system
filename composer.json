{
    "name": "hacmanchester/membership-system",
    "description": "Hackspace Manchester Member System",
    "authors": [
        {
            "name": "Arthur Guy",
            "email": "arthur@arthurguy.co.uk"
        }
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "arthurguy/notifications": "~1.0",
        "doctrine/dbal": "^2.5",
        "filp/whoops": "~1.0",
        "gocardless/gocardless-pro": "~1.1",
        "guzzlehttp/psr7": "^1.9",
        "intervention/image": "2.*",
        "itsgoingd/clockwork": "~1.8",
        "laracasts/presenter": "~0.2",
        "laravel-notification-channels/telegram": "^0.0.5",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "^1.0",
        "laravelcollective/html": "^5.4",
        "league/flysystem-aws-s3-v3": "^1.0",
        "michelf/php-markdown": "~1.4",
        "nesbot/carbon": "~1.19",
        "owen-it/laravel-auditing": "^8.0",
        "php-http/curl-client": "^2.3",
        "php-http/message": "^1.16",
        "php-http/message-factory": "^1.1",
        "rap2hpoutre/laravel-log-viewer": "^2.3",
        "sentry/sentry-laravel": "^1.5",
        "stripe/stripe-php": "1.*",
        "sybio/gif-creator": "~1.0",
        "zircote/swagger-php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "phpspec/phpspec": "~2.1",
        "mockery/mockery": "~0.9",
        "fzaninotto/faker": "~1.4",
        "barryvdh/laravel-ide-helper": "^2.4",
        "symfony/dom-crawler": "~3.1",
        "symfony/css-selector": "~3.1",
        "laravel/browser-kit-testing": "1.*" 
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "BB\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
       }
    },
    "scripts": {
        "post-install-cmd": [
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan optimize",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "allow-plugins": {
            "php-http/discovery": true,
            "kylekatarnls/update-helper": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
