{
    "name": "hacmanchester/membership-system",
    "description": "Hackspace Manchester Member System",
    "authors": [
        {
            "name": "Arthur Guy",
            "email": "arthur@arthurguy.co.uk"
        }
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "laravel/framework": "~5.2.0",
        "illuminate/html": "~5.0",
        "nesbot/carbon": "~1.19",
        "rap2hpoutre/laravel-log-viewer": "~0.2",
        "nuovo/spreadsheet-reader": "~0.5",
        "intervention/image": "2.*",
        "paypal/merchant-sdk-php": "3.8.*",
        "laracasts/presenter": "~0.2",
        "stripe/stripe-php": "1.*",
        "michelf/php-markdown": "~1.4",
        "jenssegers/rollbar": "~1.4",
        "sybio/gif-creator": "~1.0",
        "filp/whoops": "~1.0",
        "league/flysystem-aws-s3-v3": "^1.0",
        "pusher/pusher-php-server": "^2.2",
        "arthurguy/notifications": "~1.0",
        "doctrine/dbal": "^2.5",
        "itsgoingd/clockwork": "~1.8",
        "zircote/swagger-php": "^2.0",
        "gocardless/gocardless-pro": "~1.1",
        "laravel-notification-channels/backport": "^1.0",
        "laravel-notification-channels/telegram": "^0.0.5",
        "sentry/sentry-laravel": "^1.5",
        "php-http/message-factory": "^1.1",
        "php-http/curl-client": "^2.3",
        "guzzlehttp/psr7": "^1.9",
        "php-http/message": "^1.16"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "mockery/mockery": "~0.9",
        "codeception/codeception": "~2.1@beta",
        "codeception/mockery-module": "~0.2",
        "fzaninotto/faker": "~1.4",
        "barryvdh/laravel-ide-helper": "^2.4",
        "symfony/dom-crawler": "~3.0",
        "symfony/css-selector": "~3.0" 
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "BB\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan optimize",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "allow-plugins": {
            "php-http/discovery": true,
            "kylekatarnls/update-helper": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
